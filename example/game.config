// Game configuration schema
// Use envgen to generate Go and TypeScript code

package main

// GameConfig holds runtime-adjustable game settings
config GameConfig {
    // Game speed multiplier (1.0 = normal speed)
    Speed           float64     @default(1.0)    @min(0.1) @max(10.0)

    // Maximum number of players allowed in a session
    MaxPlayers      int32       @default(4)      @min(2)   @max(16)

    // Enable debug mode (extra logging, debug UI)
    EnableDebug     bool        @default(false)

    // Game mode selection
    GameMode        string      @default("classic") @options("classic","ranked","casual")

    // Round duration in seconds
    RoundDuration   int32       @default(60)     @min(10)  @max(600)

    // Starting score for new players
    StartingScore   int64       @default(0)

    // Enable spectator mode
    AllowSpectators bool        @default(true)

    // Server tick rate (ticks per second)
    TickRate        int32       @default(20)     @min(1)   @max(60) @env("GAME_TICK_RATE")
}

// MatchmakingConfig holds matchmaking settings
config MatchmakingConfig {
    // Enable skill-based matchmaking
    EnableSBMM      bool        @default(true)

    // Maximum skill difference for matching
    MaxSkillGap     int32       @default(500)    @min(100) @max(2000)

    // Queue timeout in seconds
    QueueTimeout    int32       @default(120)    @min(30)  @max(600)

    // Minimum players to start a match
    MinPlayers      int32       @default(2)      @min(2)   @max(10)
}
